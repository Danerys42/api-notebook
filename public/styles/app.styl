.application
  // List notebooks button.
  &.user-not-authenticated .notebook-list,
  // Clone notebook button.
  &.user-not-owner .notebook-clone,
  &.notebook-not-saved .notebook-clone
    display: none

.ui-loading
  display: none
  [data-state="loading"] &
    display: block

.ui-loading-icon
  position: absolute
  top: 50%
  left: 50%
  font-size: 4em
  margin-top: -0.7em
  margin-left: -0.7em
