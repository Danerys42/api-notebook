.cell-controls
  top: 0
  left: 100%
  z-index: 100
  position: absolute
  margin-top: 14px
  margin-left: 10px
  padding: 3px 0px
  color: #fff
  font-size: 0.75em
  border: 1px solid #eee
  background: #333
  border-radius: 5px
  transform: translateY(-50%)
  transition: 0.3s ease opacity
  &:after
    content: ""
    position: absolute
    top: 50%
    left: -20px
    margin-top: -10px
    border: 10px solid transparent
    border-right-color: #333
  &:before
    content: ""
    position: absolute
    top: 50%
    left: -22px
    margin-top: -11px
    border: 11px solid transparent
    border-right-color: #eee

@media only screen and (max-width: 70em)
  .cell-controls
    left: auto
    right: 37px
    &:after
      left: auto
      right: -20px
      border-left-color: #333
      border-right-color: transparent
    &:before
      left: auto
      right: -22px
      border-left-color: #eee
      border-right-color: transparent

.cell-controls button
  display: block
  width: 12.5em
  height: 2.5em
  margin: 2px 5px
  border: 1px solid transparent
  border-radius: 3px
  background: transparent
  color: #fff
  line-height: 22px
  padding: 0 7px
  text-align: left
  &:hover
    border-color: $color-cell-controls-button-outline

.cell-controls button i
  top: -1px
  position: relative
  margin-right: 3px

.cell-controls span
  float: right
  font-size: .75em
  color: $color-cell-controls-keycode

.cell-controls-btn
  position: absolute
  top: 0
  right: 0
  z-index: 10
  width: 25px
  height: @width
  padding: 1px 0 2px
  color: #aaa
  font-size: 1.3em
  text-align: center
  line-height: 1
  cursor: pointer
  border: 1px solid $color-cell-border
  background: #fff

.cell-text.active > .cell-controls-btn
  color: #fff
  background-color: #000
