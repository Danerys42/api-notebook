.cell-controls
  position: absolute
  top: -85px
  right: -145px
  border: 1px solid #eee
  border-radius: 5px

  background: #333
  color: #fff
  transition: 0.3s ease opacity
  z-index: 1000

.cell-controls:before
  content: ''
  position: absolute
  top: 50%
  left: -20px

  margin-top: -10px
  border: 10px solid transparent
  border-right-color: #333

.cell-controls button
  display: block
  width: 120px
  height: 30px
  margin: 2px 5px
  border: 0

  background: transparent
  color: #fff
  font-size: 12px
  line-height: 22px
  text-align: left

.cell-controls button i
  position: relative
  top: -1px

  margin-right: 3px

.cell .btn-show-cell-controls
  color: #aaa
  cursor: pointer
  float: right
  font-size: 2.5em
  height: 100%
  margin-right: -2px
  margin-top: -15px
  padding: 0 4px
  position: relative
  text-align: center
  width: 25px

