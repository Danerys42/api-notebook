.inspector > .preview
  white-space: pre-wrap
  > .property
    color: #555
    font-weight: bold
  > .special
    opacity: 0.9

.inspector > .preview
  height: 1.4em
  overflow: hidden
  text-overflow: ellipsis

.inspector > .preview.array,
.inspector > .preview.object
// Any children inspectors should also hide the full source output
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

.inspector > .children
  display: none
  margin-left: 1.5em

.inspector.open > .children
  display: block

.inspector.can-expand > .arrow,
.inspector.can-expand > .preview
  cursor: pointer

.inspector > .arrow
  display: none

.inspector.can-expand > .arrow
  float: left
  display: block
  margin-top: 3px
  margin-left: -10px
  border: 5px solid transparent
  border-left-width: 7px
  border-left-color: #666
  border-right-width: 0

.inspector.can-expand.open > .arrow
  margin-top: 5px
  margin-left: -12px
  border-width: 5px
  border-color: transparent
  border-top-width: 7px
  border-top-color: #666
  border-bottom-width: 0
