.notebook
  max-width: 48em
  margin: 0 auto

.notebook .cell-result
  border: 1px solid #eee
  border-left-width: 5px
  padding: 0.8em
  font-size: 0.95em
  font-family: monospace
  background-color: #f5f5f5
  &.result-pending
    display: none
  &.result-error
    border-color: #dFb5b4
    background-color: #fcf2f2

.notebook > .cell
  margin: 1em 0

.notebook > .cell > .cell-result
  position: relative
  top: -1px // Overlap the codemirror instance
