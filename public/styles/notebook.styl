.notebook
  padding: 0.5em 2em
  border: 1px solid #ccc
  border-top: 0
  border-radius: 0 0 5px 5px
  background: #fff

.notebook-header
  padding: 1em 2em
  color: #fff
  background: #333
  border: 1px solid #000
  border-top: 0
  border-radius: 5px 5px 0 0

.notebook-title
  display: inline-block
  width: 100%
  margin: 0
  color: #fff
  font-size: 2em
  font-weight: bold
  border: solid 1px rgba(0,0,0,0.0)
  background-color: transparent
  &:hover
    background-color: rgba(255,255,255, .05)
  &:focus
    outline: 0
    background-color: rgba(255,255,255, .1)
    border: solid 1px #404040
    border-top-color: #000
    border-left-color: #000


.notebook-view > .cell
  margin: 1.3em 0
  position: relative
  min-height: 1.55em

.notebook-view > .cell > .CodeMirror,
.notebook-view > .cell-text > .markdown
  border: 2px solid $color-cell-border

.notebook-view > .cell-code > .cell-result
  border: 2px solid $color-cell-border
  border-top: 0
  border-left-width: 5px
  color: $color-result-text
  font-size: 0.95em
  line-height: 1.45
  font-family: monospace
  background-color: $color-result-bg
  > .result-label
    float: left
    color: $color-result-label
    padding: .55em 0 .55em .45em
  > .result-content
    margin: 0 0.3em
    padding: 0.55em 0
    overflow: hidden

.notebook-view > .cell-code > .cell-result-pending
  display: none

.notebook-view > .cell-code-error
  > .CodeMirror,
  > .cell-result,
  > .cell-controls-btn
    border-color: $color-error-border
  > .cell-result
    color: $color-error-text
    background-color: $color-error-bg

.cell > .cell-border
  top: -11px
  width: 100%
  position: absolute
  border-bottom: dotted 1px #e5e5e5
  .cell-border-btn
    cursor: pointer
    position: absolute
    top: 0
    left: 50%
    padding: 0 4px
    margin-top: -5px
    margin-left: -10px
    color: #eaeaea
    font-size: 0.4em
    text-shadow: 0px -1px 1px rgba(128, 128, 128, 0.3)
    background-color: #fff
    &:hover
      color: #a5a5a5

.cell > .cell-border-below
  top: auto
  bottom: -10px
  display: none

.cell:last-child > .cell-border-below
  display: block

.cell-buttons
  position: absolute
  width: 100%
  z-index: 1001
  margin-top: -10px
  text-align: center
  .action
    color: #333
    display: inline-block
    padding: 0.6em 1em
    font-size: 0.7em
    border: solid 1px #bfbfbf
    background: linear-gradient(#fff, #e6e6e6)
    box-shadow: 0 1px 2px #bfbfbf
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75)
    &:hover
      color: #333333
      background: #e7e7e7
    + .action
      margin-left: -1px
  .action:first-child
    border-radius: left 3px
  .action:last-child
    border-radius: right 3px

.markdown
  padding: 16px
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  ul,
  ol
    margin: 0 0 24px

.notebook-toolbar
  position: relative
  height: 3.2em
  font-size: .8em
  border: solid 1px #ccc
  background-color: #f4f4f4
  .toolbar-inner
    height: 100%
    padding: 0 2em 0 0
    margin-right: 55px
    .persistence-status
      display: inline-block
      height: 100%
      border: solid 1px transparent
      border-right-color: #E8E8E8
      padding: 0.5em 1em 0.5em 2em
      &:hover
        background-color: #E8E8E8
        border: solid 1px #fff
        border-top-color: #e1e1e1
        border-left-color: #e1e1e1
    .text-status
      display: inline-block
      margin-top: 0.35em
    .text-status + .text-status
      margin-left: 0.4em
    .auth-status
      font-weight: bold
    .save-status
      font-style: italic
  .toolbar-buttons
    float: right
    text-align: right
    padding: 0.5em 0
    button
      float: left
      margin-right: 1em
    button:last-child
      margin-right: 0
    .btn-text
      line-height: 28px
    .notebook-view-active & > .btn-edit
      display: none
    .notebook-edit-active & > .btn-view
      display: none
  .toolbar-end
    float: right
    height: 100%
    background: #e5e5e5
    border-left: 1px solid #b2b2b2
  .notebook-edit-active & > .toolbar-end
    background: #f9f9f9

.notebook-raw > pre
  border: 0
  padding: 0
  white-space: pre-wrap
  background-color: transparent

.notebook-edit
  margin: 1em 0

.powered-by-logo
  float: right
  width: 179px
  height: 40px
  background-image: url("../images/powered-by-mulesoft.png")

.notebook-share
  margin-top: 3em

.notebook-share-title
  color: #999
  font-size: 0.85em

.notebook-share-about,
.notebook-share-input
  color: #8a8a8a
  font-size: 0.75em

.notebook-share-title,
.notebook-share-about
  margin: 0 0 6px
  line-height: 1

.notebook-share-input
  border: 1px solid #E5E5E5
  border-top-color: #BFBFBF
  border-left-color: #BFBFBF
  width: 100%
  max-width: 380px
  margin: 0 0 10px
  padding: 4px
