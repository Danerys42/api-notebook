.application
  width: 95%
  max-width: 52em
  margin: 1em auto

.notebook
  border: 1px solid #ccc
  border-top: 0
  border-radius: 0 0 5px 5px
  background: #fff
  > .notebook-content
    padding: 0.5em 2em

.notebook-header
  padding: 1em 2em
  color: #fff
  background: #333
  border: 1px solid #000
  border-top: 0
  border-radius: 5px 5px 0 0

.notebook-title
  display: inline-block
  width: 100%
  margin: 0
  color: #fff
  font-size: 2em
  font-weight: bold
  border: 0
  background-color: transparent
  &:focus
    outline: 0

.notebook-banner
  padding: 1em 2em
  border: 1px solid #ccc
  border-top-width: 0
  border-bottom-color: darken($yellow, 20%)
  cursor: pointer
  background: $yellow

.notebook-banner p
  margin: 0

.notebook-view > .cell > .cell-result
  border-style: solid
  border-color: $color-result-border
  border-width: 0 2px 2px 5px
  font-size: 0.95em
  line-height: 1.45
  font-family: monospace
  background-color: $color-result-bg
  &.result-pending
    display: none
  &.result-error
    background-color: $color-error-bg
    border-left-color: $color-error-border
  > .result-label
    float: left
    color: $color-result-label
    padding: .55em 0 .55em .45em
  > .result-content
    margin: 0 0.3em
    padding: 0.55em 0
    overflow: hidden

.notebook-view > .cell
  border: 1px solid $color-cell-border
  margin: 1em 0
  position: relative
  min-height: 1.55em

.notebook-view > .cell > .markdown,
.notebook-view > .cell > .CodeMirror
  border: 2px solid $color-cell-border

.notebook-view > .cell-code > .cell-result
  color: $color-result-text
  &.result-error
    color: $color-error-text

.cell-code > .comment
  cursor: pointer
  position: absolute
  width: 100%
  top: -8px
  border-bottom: dotted 1px #E5E5E5
  .insert-dot
    position: absolute
    left: 50%
    top: -5px
    font-size: .4em
    padding: 0 4px
    color: #EAEAEA
    text-shadow: 0px -1px 1px rgba(128, 128, 128, 0.6)
    background-color: #FFF
  &:hover
    border-bottom: dotted 1px #A5A5A5
    .insert-dot
      color: #A5A5A5
  .user-not-owner &
    display: none

.insert-buttons
  position: absolute
  left: 50%
  margin-left: -145px
  top: 140px
  z-index: 1001
  border-radius: 3px
  border: solid 1px #BFBFBF
  background: linear-gradient(top, #fff 0%, #E6E6E6 100%)
  box-shadow 1px 1px 3px #BFBFBF
  button
    color: #333
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75)
    border: 0
    border-left: solid 1px #BFBFBF
    background: transparent
    font-size: 0.8em
    padding: .5em 1.5em
    &:hover
      color: #333333
      background: #e7e7e7
  button:first-child
    border-left: 0
    border-radius: left 3px
  button:last-child
    border-radius: right 3px

.cell-text > .comment
  position: absolute
  top: 50%
  left: -1.5em
  margin-top: -0.5em
  font-family: monospace

.cell-text > .comment-close
  left: auto
  right: -20px

.markdown
  padding: 16px
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  ul,
  ol
    margin: 0 0 24px

.notebook-toolbar
  border: solid 1px #CCC
  background-color: #F4F4F4
  font-size: .8em
  position: relative
  .toolbar-inner
    padding: 0.5em 2em
    overflow: hidden
    .auth-status
      display: inline-block
      font-weight: bold
      margin-top: 0.5em
    .save-status
      display: inline-block
      font-style: italic
      margin: 0.6em 0 0 0.5em
    .toolbar-buttons
      float: right
      text-align: right
      button
        float: left
        margin-right: 1em
        line-height: 28px
      button:last-child
        margin-right: 0
      .notebook-view-active & > .btn-edit
        display: none
      .notebook-edit-active & > .btn-view
        display: none
  .toolbar-end
    float: right
    height: 3.2em
    background: #e5e5e5
    border-left: 1px solid #b2b2b2
  .notebook-edit-active & > .toolbar-end
    background: #f9f9f9

.notebook-raw > pre
  border: 0
  padding: 0
  white-space: pre-wrap
  background-color: transparent

.notebook-edit
  margin: 1em 0
