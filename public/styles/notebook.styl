.application
  width: 95%
  max-width: 52em
  margin: 1em auto

.notebook
  border: 1px solid #ccc
  border-top: 0
  border-radius: 0 0 5px 5px
  background: #fff
  > .notebook-content
    padding: 0.5em 2em

.notebook-header
  padding: 1em 2em
  color: #fff
  background: #333
  border: 1px solid #000
  border-top: 0
  border-radius: 5px 5px 0 0

.notebook-title
  display: inline-block
  width: 100%
  margin: 0
  color: #fff
  font-size: 2em
  font-weight: bold
  border: 0
  background-color: transparent
  &:focus
    outline: 0

.notebook-banner
  padding: 1em 2em
  border: 1px solid #ccc
  border-top-width: 0
  border-bottom-color: darken($yellow, 20%)
  cursor: pointer
  background: $yellow

.notebook-banner p
  margin: 0

.notebook-view > .cell > .cell-result
  border-style: solid
  border-color: $color-result-border
  border-width: 0 2px 2px 5px
  font-size: 0.95em
  line-height: 1.45
  font-family: monospace
  background-color: $color-result-bg
  &.result-pending
    display: none
  &.result-error
    background-color: $color-error-bg
    border-left-color: $color-error-border
  > .result-label
    float: left
    color: $color-result-label
    padding: .55em 0 .55em .45em
  > .result-content
    margin: 0 0.3em
    padding: 0.55em 0
    overflow: hidden

.notebook-view > .cell
  border: 1px solid $color-cell-border
  margin: 1.3em 0
  position: relative
  min-height: 1.55em

.notebook-view > .cell > .markdown,
.notebook-view > .cell > .CodeMirror
  border: 2px solid $color-cell-border

.notebook-view > .cell-code > .cell-result
  color: $color-result-text
  &.result-error
    color: $color-error-text

.cell > .cell-insert
  top: -12px
  width: 100%
  position: absolute
  border-bottom: dotted 1px #e5e5e5
  .insert-dot
    cursor: pointer
    position: absolute
    top: 0
    left: 50%
    padding: 0 4px
    margin-top: -5px
    margin-left: -10px
    color: #eaeaea
    font-size: 0.4em
    text-shadow: 0px -1px 1px rgba(128, 128, 128, 0.3)
    background-color: #fff
    &:hover
      color: #a5a5a5

.cell > .cell-insert-bottom
  display: none
  top: auto
  bottom: -12px

.cell:last-child > .cell-insert-bottom
  display: block

.user-not-owner .cell > .cell-insert
  display: none

.cell-insert-buttons
  display: none
  position: absolute
  left: 50%
  z-index: 1001
  margin-top: -10px
  margin-left: -140px
  .btn
    width: @margin-left * -1
    color: #333
    float: left
    padding: 0.6em 0.1em
    font-size: 0.7em
    border: solid 1px #bfbfbf
    background: linear-gradient(#fff, #e6e6e6)
    box-shadow: 0 1px 2px #bfbfbf
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75)
    &:hover
      color: #333333
      background: #e7e7e7
  .btn:first-child
    border-radius: left 3px
  .btn:last-child
    margin-left: -1px
    border-radius: right 3px
  .cell-insert-hover &
    display: block

.markdown
  padding: 16px
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  ul,
  ol
    margin: 0 0 24px

.notebook-toolbar
  border: solid 1px #ccc
  background-color: #f4f4f4
  font-size: .8em
  position: relative
  .toolbar-inner
    padding: 0.5em 2em
    overflow: hidden
    .auth-status
      display: inline-block
      font-weight: bold
      margin-top: 0.5em
    .save-status
      display: inline-block
      font-style: italic
      margin: 0.6em 0 0 0.5em
    .toolbar-buttons
      float: right
      text-align: right
      button
        float: left
        margin-right: 1em
        line-height: 28px
      button:last-child
        margin-right: 0
      .notebook-view-active & > .btn-edit
        display: none
      .notebook-edit-active & > .btn-view
        display: none
  .toolbar-end
    float: right
    height: 3.2em
    background: #e5e5e5
    border-left: 1px solid #b2b2b2
  .notebook-edit-active & > .toolbar-end
    background: #f9f9f9

.notebook-raw > pre
  border: 0
  padding: 0
  white-space: pre-wrap
  background-color: transparent

.notebook-edit
  margin: 1em 0
