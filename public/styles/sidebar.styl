.notebook-sidebar
  display: flex
  position: relative
  width: 30%
  max-width: 20em
  transition: 0.3s width ease
  &.sidebar-closed
    width: 0
    .sidebar-content
      border-right: transparent

.sidebar-content
  flex: 1
  overflow: hidden
  border-right: 1px solid #ccc
  background-color: #eee
  border-bottom-left-radius: 5px
  .notebook-embedded &
    border-bottom-left-radius: 0

.sidebar-list,
.sidebar-updating
  position: absolute
  top: 2.2em
  left: 0
  right: 0
  bottom: 0

.sidebar-updating
  padding: 1em

.sidebar-user
  padding: 0.5em
  line-height: 1.2
  font-weight: bold
  border-bottom: 1px solid #ccc
  // Enforce some space below for the list.
  margin-bottom: 8em

.sidebar-user-icon
  float: left
  margin-right: 5px

.sidebar-user-title
  overflow: ellipsis

.sidebar-list
  overflow: scroll
  color: #555
  .item
    margin: 0
    list-style: none
    padding: 0.8em
    padding-left: 2.2em
    border-bottom: 1px solid #ccc
    &:last-child
      border-bottom: none
  [data-load]
    cursor: pointer
  .item-active:before
    content: ""
  .item-description
    font-size: 0.8em
  .item-title
    font-weight: bold

.sidebar-toggle
  cursor: pointer
  width: 10px
  height: 16px
  position: absolute
  top: 50%
  right: -5px
  margin-top: -8px
  z-index: 1
  border: 1px solid #bbb
  border-radius: 3px
  background-color: #eee
  .icon
    position: absolute
    top: 3px
    left: 2px
    border: 4px solid transparent
    margin-left: -4px
    border-right-color: #bbb
    .sidebar-closed &
      border-left-color: #bbb
      border-right-color: transparent
      margin-left: auto
      margin-right: -4px
